- title "Survey #{h @survey.surveyid}"

%p
  %strong ENO:
  =h @survey.eno
%p
  %strong Survey name:
  =h @survey.surveyname
%p
  %strong Data types:
  =h @survey.datatypes
%p
  %strong UNO:
  =h @survey.uno
%p
  %strong Startdate:
  =h @survey.startdate
%p
  %strong Enddate:
  =h @survey.enddate
%p
  %strong Vessel Type:
  =h @survey.vessel_type
%p
  %strong Vessel:
  =h @survey.vessel
%p
  %strong Entered by:
  =h @survey.enteredby
%p
  %strong Comments:
  =h @survey.comments
%p
  %strong BBOX:
  =h "#{@survey.nlat}, #{@survey.slat}, #{@survey.elong}, #{@survey.wlong}"
%p
  %strong Samples: 
  = link_to "View Samples", survey_samples_path(@survey)
%p
  = link_to "Edit", edit_survey_path(@survey)
  |
  = link_to "Destroy", survey_path(@survey), :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", surveys_path

=content_for(:sidebar_otherdata) do
  - gams = find_gams_in_comments(@survey.comments)
  %p
    = link_to("Data from GADA Project", get_gada_data_url(gams), :alt => "Geophysical Analysis and Data Access", :title=>"Geophysical Analysis and Data Access")
  %p
    = link_to("Metadata from GADA Project", get_gada_metadata_url(gams), :alt => "Geophysical Analysis and Data Access", :title=>"Geophysical Analysis and Data Access")
