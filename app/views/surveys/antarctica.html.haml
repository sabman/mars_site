- title "Antarctica Surveys", true

= render :partial => "recent", :collection => @surveys, :as => :survey

= content_for(:sidebar) do
  %h4 Statistics
  %p 
    Total Surveys
    =@surveys.count
  %p 
    Total Samples
    =@surveys.collect{|s|s.samples.count}.sum

= content_for(:sidebar) do
  %h4 External Data
  = render :partial => 'antarctica_external_links'
