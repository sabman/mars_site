#record{:class => cycle('odd','even')}
  #summary_stats
    %div{:class => "block"}="GA-#{survey.gams}" unless survey.gams.blank?
    %div{:class => "block"}=link_to "#{survey.samples.count} samples", survey_samples_path(survey)
    %div{:class => "#{survey.status}"}=survey.status
  - is_missing_metadata = survey.missing_critical_metadata?
  %div.flag
    %span{:class => ("missing_metadata_flag" if is_missing_metadata)}= image_tag('red_flag_16x16.png', :alt => "missing metadata" , :title => "missing metadata" ) if is_missing_metadata
  %div.survey_links
    %strong= link_to "#{h survey.eno}", survey_path(survey)
    ,
    = link_to "#{h survey.surveyid}", survey_path(survey) || "missing surveyid"
    ,
    = link_to "#{h survey.surveyname}", survey_path(survey)
